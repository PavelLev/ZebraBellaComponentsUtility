<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="UserData" type="ZebraBellaComponentsUtility.ConfigurationSections.UserData.UserData, ZebraBellaComponentsUtility" requirePermission="false"/>
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
    <UserData>
        <AlternativeFileTree>
            <DirectoryJunctions>
                <Add 
                    Name="model" 
                    RepositoryRelativePath="./common/model/" 
                />
                <Add 
                    Name="logic" 
                    RepositoryRelativePath="./components/{0}/{0}Src/" 
                />
                    
            </DirectoryJunctions>
        </AlternativeFileTree>
        <ApplicationRelativePaths
            DomainRoot="../"
        />
        <ComponentRelativePaths
            ExecutableDirectory="./bella/"
            ExecutableFile="belladomain.exe"
            StorageDirectory="./bella/storage/"
            LogsDirectory="./bella/logs/"
        />
        <Miscellaneous
            BellaCloseDelay="1000"
            AlarmDelay="500"
        />
        <RepositoryRelativePaths
            ComponentsFolder="./components/"
            AlternativeFileTreeFolder="./AlternativeFileTree/"
        />
    </UserData>
</configuration>