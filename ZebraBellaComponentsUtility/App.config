<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <sectionGroup name="UserDataGroup">
            <section name="UserData" type="ZebraBellaComponentsUtility.ConfigurationSections.UserData.UserData, ZebraBellaComponentsUtility" requirePermission="false"/>
        </sectionGroup>
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
    <UserDataGroup>
        <UserData>
            <AlternativeFileTree>
                <DirectoryJunctions>
                    <Add 
                        Name="model" 
                        RepositoryRelativePath="./src/Domain/common/model/" 
                    />
                    <Add 
                        Name="logic" 
                        RepositoryRelativePath="./src/Domain/components/{0}/{0}Src/" 
                    />
                    
                </DirectoryJunctions>
            </AlternativeFileTree>
            <ApplicationRelativePaths
                RepositoryRoot="../../../"
            />
            <ComponentRelativePaths
                ExecutableDirectory="./bella/"
                ExecutableFile="belladomain.exe"
                StorageDirectory="./bella/storage/"
                LogsDirectory="./bella/logs/"
            />
            <Miscellaneous
                BellaCloseDelay="1500"
            />
            <RepositoryRelativePaths
                ComponentsFolder="./src/Domain/components/"
                AlternativeFileTreeFolder="./src/Domain/AlternativeFileTree/"
            />
        </UserData>
    </UserDataGroup>
</configuration>