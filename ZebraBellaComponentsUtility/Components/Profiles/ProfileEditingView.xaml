<Window x:Class="ZebraBellaComponentsUtility.Components.Profiles.ProfileEditingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZebraBellaComponentsUtility.Components.Profiles"
        mc:Ignorable="d"
        Title="ProfileEditingView"
        Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        >
    <StackPanel>
        <Grid
            Margin="5, 5, 5, 0"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*"
                />
                <ColumnDefinition
                    Width="*"
                />
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="Name"    
            />
            <TextBox 
                Grid.Column="1"
                Text="{Binding Name}"
                IsEnabled="{Binding IsCreation}"
                Margin="5, 0, 0, 0"
            />
        </Grid>
        <ItemsControl 
            ItemsSource="{Binding ComponentNameViewModels}"
        >
            <ItemsControl.ItemTemplate>
                <DataTemplate 
                    DataType="{x:Type local:ComponentNameViewModel}"
                >
                    <CheckBox 
                        Content="{Binding Value}" 
                        IsChecked="{Binding IsSelected}"
                        Margin="5, 5, 5, 0"
                    />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*"
                />
                <ColumnDefinition
                    Width="*"
                />
            </Grid.ColumnDefinitions>
            <Button
                Content="Ok"
                Command="{Binding OkCommand}"
                Margin="5"
            />
            <Button
                Grid.Column="1"
                Content="Cancel"
                Command="{Binding CancelCommand}"
                Margin="5"
            />
            </Grid>
    </StackPanel>
</Window>
