<Window x:Class="ZebraBellaComponentsUtility.Utility.CustomMessageBoxes.CustomMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ZebraBellaComponentsUtility.Utility.CustomMessageBoxes"
    mc:Ignorable="d"
    Title="CustomMessageBox" 
    SizeToContent="WidthAndHeight"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*"
            />
            <RowDefinition
                Height="*"
            />
        </Grid.RowDefinitions>
        <TextBlock 
            x:Name="TextBlock" 
            Text ="werwerwerwerwerwerwerwerwerwerwerwerwerwerwerwer" 
            Margin="10, 10" 
            TextWrapping="Wrap" 
            MaxWidth="300" 
            MaxHeight="200"
        />
        <Button 
            Grid.Row="1" 
            Content="OK" 
            Click="ButtonBase_OnClick" 
            HorizontalAlignment="Right" 
            Padding="25, 2" 
            Margin="15, 10"
        />
    </Grid>
</Window>
